<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WalkingNotes" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4A403A</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextColor">@android:color/holo_red_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WalkingNotes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WalkingNotes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WalkingNotes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">60dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/buttonbg</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:insetBottom">1dp</item>
        <item name="android:text">Кнопка</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>